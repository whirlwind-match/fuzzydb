            <groupId>org.fuzzydb</groupId>
            <artifactId>org.fuzzydb.io.packet</artifactId>
            <version>1.0.0.RC1-SNAPSHOT</version>
            <type>jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-jpa_2.0_spec</artifactId>
            <version>1.1</version>
